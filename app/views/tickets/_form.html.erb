<%= form_with(model: train, local: true) do |form| %>
  <% if train.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(train.errors.count, "error") %> prohibited this train from being saved:</h2>

      <ul>
      <% train.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Номер поезда" %>
    <%= form.number_field :name %>
  </div>

  <div class="field">
    <%= form.label :current_station, "Текущая станция" %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :route, "Маршрут" %>
    <%= form.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
    <p>
      "Сортировка вагонов с головы поезда"
      <%= form.check_box :sortcar %>
    </p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
