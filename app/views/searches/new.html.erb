<h1>Новый поиск</h1>
<%= form_with(url: search_path, local: true,  method: :get) do |form| %>
  <div class="field">
    <%= form.label :station_first, "Cтанция отправления" %>
    <%= form.select(:station_first, @stations.map {|s| [ s.title, s.title ] }) %>
  </div>

  <div class="field">
    <%= form.label :station_last, "Cтанция прибытия" %>
    <%= form.select(:station_last, @stations.map {|s| [ s.title, s.title ] }) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
