<h1>Новый маршрут</h1>

<%= form_with(model: [:admin, @route], local: true) do |form| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :railway_stations, "Cтанции маршрута" %>
    <%= form.select(:railway_stations_ids, RailwayStation.all.collect { |s| [ s.title, s.id ] },
                                                                        { :prompt => "Выберите станции" },
                                                                        { :multiple => true, :size => 5 }) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Назад', admin_routes_path %>
