<%= form_with(model: [:admin, train], local: true) do |form| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= form.label :name, "Номер поезда" %>
    <%= form.number_field :name %>
  </div>

  <div class="field">
    <%= form.label :current_station, "Текущая станция" %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :route, "Маршрут" %>
    <%= form.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
    <p>
      "Сортировка вагонов с головы поезда"
      <%= form.check_box :sortcar %>
    </p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
