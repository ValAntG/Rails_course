<%= form_with(model: [:admin, train], local: true) do |form| %>
  <%= render 'common/errors', resource: train %>

  <div class="form form-control">
    <%= form.label :name, "Номер поезда", class: 'text-center col-md-4' %>
    <%= form.number_field :name, class: 'text-center col-md-8' %>
  </div>

  <div class="form form-control">
    <%= form.label :current_station, "Текущая станция", class: 'text-center col-md-4'  %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="form form-control">
    <%= form.label :route, "Маршрут", class: 'text-center col-md-4'  %>
    <%= form.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="form form-control">
    <p class='text-center col-md-8'>Сортировка вагонов с головы поезда</p>
    <%= form.check_box :sortcar, class: 'text-center col-md-4' %>
  </div>

  <div>
    <%= form.submit t('common.submit.update'), class: 'form form-control btn btn-success col-md-4 text-center'  %>
  </div>
<% end %>
