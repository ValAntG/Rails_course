<%= form_with(model: [:admin, railway_station],  local: true,
               html: { style: "display: #{hidden ? 'none' : 'block' }", class: "edit_form_add" }  ) do |form| %>
  <%= render 'common/errors', resource: @railway_station %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: @railway_station.new_record? ? 'Создать' : 'Редактировать')%>
  </div>
<% end %>
