<p id="notice"><%= notice %></p>

<h1>Поезда</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.name %></td>
        <td><%= link_to 'Посмотреть', train %></td>
        <td><%= link_to 'Редактировать', edit_train_path(train) %></td>
        <td><%= link_to 'Удалить', train, method: :delete, data: { confirm: 'Вы действительно хотите удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый поезд', new_train_path %>
